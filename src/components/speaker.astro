---
import Picture from "astro/components/Picture.astro";

const { speakers } = Astro.props;

---

<style>
  .speakers-section {
    text-align: center;
    padding: 50px 20px;
    background: #f9f9f9;
  }

  .speakers-container {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 30px;
    margin-top: 3rem;
  }

  .section-title {
    font-size: 2.8rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    font-size: 1.5rem;
    color: #555;
    margin-bottom: 2rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .speaker-card {
    background: white;
    padding: 20px;
    border-radius: 12px;
    text-align: center;
    width: 280px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .speaker-card:hover {
    transform: scale(1.05);
  }

  .container_white {
    border-radius: 50%;
    width: 10rem;
    height: 10rem;
    display: flex;
    place-self:center;
    justify-content: center;
    align-items: center;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
  }

  .speaker-image-container {
    width: 9rem;
    height: 9rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    padding: 5px;
    background: linear-gradient(to right, #4a00e0, #8e2de2);
  }

  .speaker-card img {
    width: 8rem;
    height: 8rem;
    border-radius: 50%;
    display: block;
  }

  .speaker-name {
    font-size: 1.5rem;
    font-weight: bold;
    margin-top: 10px;
  }

  .speaker-topic {
    font-size: 1.2rem;
    color: #4a00e0;
    font-weight: bold;
    margin-top: 5px;
  }

  .speaker-purpose {
    font-size: 1rem;
    color: #666;
    margin-top: 10px;
    text-align: justify;
  }

  /* MEDIA QUERY PARA MOBILE */
  @media screen and (max-device-width: 768px) {
    .speakers-container {
      flex-direction: column;
      align-items: center;
      margin-top: 2rem;
    }

    .speaker-card {
      width: 90%;
    }
  }
  .speakers-section {
  text-align: center;
  padding: 60px 20px;
  background: #ffffff; /* Mantener fondo blanco */
}

.subscription-process {
  text-align: center;
  padding: 80px 20px;
  background: linear-gradient(135deg, #f0f4ff, #e5e9ff); /* Fondo degradado */
  border-radius: 20px;
}

.price-box {
  background: white;
  padding: 15px;
  border-radius: 12px;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  display: inline-block;
  margin-bottom: 20px;
}

.price-text {
  font-size: 1.5rem;
  font-weight: bold;
  color: #333;
}

.account-text {
  font-size: 1rem;
  color: #555;
}

.highlight {
  color: #ff9800; /* Amarillo para resaltar el precio */
}

.steps-container {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
}

.step {
  background: white;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  text-align: center;
  width: 250px;
}

</style>

<section id="speakers" class="speakers-section">
  <h2 class="section-title">Nuestros Ponentes</h2>
  <p class="section-subtitle">
    Conoce a los expertos que compartirán sus conocimientos y experiencias en el Congreso Educativo.
  </p>  
  <div class="speakers-container">
    {speakers.map(speaker => (
      <div class="speaker-card">
        <div class="container_white">
          <div class="speaker-image-container">
            <Picture src={speaker.image} alt={speaker.name} />
          </div>
        </div>
        <h3 class="speaker-name">{speaker.name}</h3>
        <p class="speaker-topic">{speaker.title || "Tema no disponible"}</p>
        <p class="speaker-purpose">{speaker.purpose || "Propósito no disponible"}</p>
      </div>
    ))}
  </div>
</section>
